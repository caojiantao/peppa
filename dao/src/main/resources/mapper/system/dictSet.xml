<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace用作标识mapper的唯一，通常包名+文件名 -->
<mapper namespace="com.cjt.dao.system.IDictSetDAO">

    <insert id="insert" parameterType="com.cjt.entity.model.system.DictSet" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO dict_set (parent_value_id, code, name, `desc`)
        VALUES (#{parentValueId}, #{code}, #{name}, #{desc})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM dict_set
        WHERE id = #{id}
    </delete>

    <update id="updateById" parameterType="com.cjt.entity.model.system.DictSet">
        UPDATE dict_set
        <trim prefix="SET" suffix="WHERE id = #{id}" suffixOverrides=",">
            <if test='parentValueId!=null'>`parent_value_id` = #{parentValueId},</if>
            <if test='code!=null'>`code` = #{code},</if>
            <if test='name!=null'>`name` = #{name},</if>
            <if test='desc!=null'>`desc` = #{desc},</if>
        </trim>
    </update>

    <select id="getById" parameterType="int" resultType="com.cjt.entity.model.system.DictSet">
        SELECT
            id,
            parent_value_id AS 'parentValueId',
            code,
            name,
            `desc`
        FROM dict_set
        WHERE id = #{id}
    </select>

    <select id="getDatas" parameterType="com.cjt.entity.dto.DictionaryDTO" resultType="com.cjt.entity.model.system.DictSet">
        SELECT
        id,
        parent_value_id AS 'parentValueId',
        code,
        name,
        `desc`
        FROM dict_set
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test='code!=null and code!=""'>AND `code` = #{code}</if>
        </trim>
        <if test="start!=null and offset!=null">
            LIMIT #{start}, #{offset}
        </if>
    </select>

    <select id="getDatasTotal" parameterType="com.cjt.entity.dto.DictionaryDTO" resultType="int">
        SELECT COUNT(*) FROM dict_set
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test='code!=null and code!=""'>AND `code` = #{code}</if>
        </trim>
    </select>
</mapper>